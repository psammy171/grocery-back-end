generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  USER
  ADMIN
}

model Role {
  id     String   @id @default(uuid())
  role   RoleEnum
  user   User?    @relation(fields: [userId], references: [id])
  userId String?
}

model Address {
  id             String  @id @default(uuid())
  addressLineOne String
  addressLineTwo String
  city           String
  zipcode        String
  label          String?
  User           User?   @relation(fields: [userId], references: [id])
  userId         String?
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  roles     Role[]
  password  String
  order     UserOrder[]
  addresses Address[]
}

model GroceryItem {
  id        String      @id @default(uuid())
  name      String
  price     Int
  archived  Boolean     @default(false)
  orderItem OrderItem[]
}

model UserOrder {
  id     String      @id @default(uuid())
  user   User        @relation(fields: [userId], references: [id])
  userId String
  total  Int         @default(0)
  isCart Boolean     @default(true)
  items  OrderItem[]
}

model OrderItem {
  quantity      Int
  groceryItemId String
  item          GroceryItem @relation(fields: [groceryItemId], references: [id])
  order         UserOrder   @relation(fields: [orderId], references: [id])
  orderId       String

  @@id([groceryItemId, orderId])
}
