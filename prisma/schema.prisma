generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  USER
  ADMIN
}

model Role {
  id     String   @id @default(uuid())
  role   RoleEnum
  User   User?    @relation(fields: [userId], references: [id])
  userId String?
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  roles    Role[]
  password String
  Order    Order[]
}

model GroceryItem {
  id        String      @id @default(uuid())
  name      String
  price     Int
  archived  Boolean     @default(false)
  OrderItem OrderItem[]
}

model Order {
  id     String      @id @default(uuid())
  user   User        @relation(fields: [userId], references: [id])
  userId String
  items  OrderItem[]
}

model OrderItem {
  id            String       @id @default(uuid())
  quantity      Int
  groceryItemId String
  item          GroceryItem? @relation(fields: [groceryItemId], references: [id])
  Order         Order?       @relation(fields: [orderId], references: [id])
  orderId       String?
}
